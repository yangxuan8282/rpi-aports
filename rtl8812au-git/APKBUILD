# Maintainer: He Yangxuan <yangxuan8282@gmail.com>
pkgname=rtl8812au-git
pkgver=4.3.14
pkgrel=1
pkgdesc="rtl8812AU_8821AU linux kernel driver for AC1200 (801.11ac) Wireless Dual-Band USB Adapter"
url="https://github.com/abperiasamy/rtl8812AU_8821AU_linux"
arch="armhf"
license="GPL2"
makedepends="linux-rpi2-dev"
install="$pkgname.post-install"
source="$pkgname-$pkgver.tar.gz::$url/archive/master.tar.gz
	$install"
options="!check"
_kver=4.9.76-0-rpi2
_builddir=${srcdir}/rtl8812AU_8821AU_linux-master

build() {
	cd $_builddir
	ARCH=arm KVER=${_kver} make all
}

package() {
	cd $_builddir
	
	install -Dm644 rtl8812au.ko "${pkgdir}/lib/modules/${_kver}/kernel/drivers/net/wireless/rtl8812au.ko"
}

